---
---

<nav 
  x-data="{ isScrolled: false, isMobileMenuOpen: false }"
  x-init="
    window.addEventListener('scroll', () => {
      isScrolled = window.scrollY > 20;
    });
  "
  :class="isScrolled ? 'bg-white shadow-lg' : 'bg-white/95 backdrop-blur-sm'"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between md:h-20">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
          Audelabs
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex md:items-center md:space-x-8">
        <a
          href="/"
          class="text-sm font-medium text-gray-700 hover:text-primary transition-colors"
        >
          Inicio
        </a>
        <a
          href="/servicios"
          class="text-sm font-medium text-gray-700 hover:text-primary transition-colors"
        >
          Servicios
        </a>
        <a
          href="/audelabs-terra"
          class="text-sm font-medium text-gray-700 hover:text-primary transition-colors"
        >
          Audelabs Terra
        </a>
        <a
          href="/sobre-nosotros"
          class="text-sm font-medium text-gray-700 hover:text-primary transition-colors"
        >
          Sobre Nosotros
        </a>
        <a
          href="/contacto"
          class="inline-flex items-center justify-center rounded-lg bg-primary px-6 py-3 text-sm font-semibold text-white shadow-lg transition-all duration-200 hover:opacity-90 hover:shadow-xl"
        >
          Contacto
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        @click="isMobileMenuOpen = !isMobileMenuOpen"
        class="md:hidden text-gray-700"
        aria-label="Toggle menu"
      >
        <svg x-show="!isMobileMenuOpen" x-cloak class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg x-show="isMobileMenuOpen" x-cloak class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div 
      x-show="isMobileMenuOpen"
      x-cloak
      x-transition
      class="md:hidden border-t border-gray-200 py-4"
    >
      <div class="flex flex-col space-y-4">
        <a
          href="/"
          @click="isMobileMenuOpen = false"
          class="text-left text-sm font-medium text-gray-700 hover:text-primary transition-colors"
        >
          Inicio
        </a>
        <a
          href="/servicios"
          @click="isMobileMenuOpen = false"
          class="text-left text-sm font-medium text-gray-700 hover:text-primary transition-colors"
        >
          Servicios
        </a>
        <a
          href="/audelabs-terra"
          @click="isMobileMenuOpen = false"
          class="text-left text-sm font-medium text-gray-700 hover:text-primary transition-colors"
        >
          Audelabs Terra
        </a>
        <a
          href="/sobre-nosotros"
          @click="isMobileMenuOpen = false"
          class="text-left text-sm font-medium text-gray-700 hover:text-primary transition-colors"
        >
          Sobre Nosotros
        </a>
        <a
          href="/contacto"
          @click="isMobileMenuOpen = false"
          class="inline-flex items-center justify-center rounded-lg bg-primary px-6 py-3 text-sm font-semibold text-white shadow-lg transition-all duration-200 hover:opacity-90 w-full"
        >
          Contacto
        </a>
      </div>
    </div>
  </div>
</nav>
